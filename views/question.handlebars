

<div>
    <div class="row">
        <div class="subjects">
            {{!-- <button id="skip">HTML</button>
            <button id="skip">Javascript</button>
            <button id="skip">Node.js</button> --}}
        <div class="col-8 offset-2">
            <div class="card mt-4">
                <div class="card-body">
                    <h5 class="card-title">Question</h5>
                    <p>
                        <strong>ID</strong>: {{question.id}}
                    </p>
                    <p>
                        <strong>Text</strong>: {{question.text}}
                    </p>
                    <p>
                        <strong>Answers</strong>:
                        {{#each question.Answers}}
                            <li data-id="{{this.id}}" class="list-group-item">
                                {{this.text}}
                            </li>
                        {{/each}}
                    </p>

                    
                    <a href="/">← Back To Home</a>
                </div>
            </div>
            <button type="button" class="btn btn-outline-dark buttonTopic">HTML</button>
            <button type="button" class="btn btn-outline-dark buttonTopic">Javascript</button>
            <button type="button" class="btn btn-outline-dark buttonTopic">Node.JS</button>
        </div>
    </div>
</div>

<div>
    <div class="row">
        <div class="question">
            <p>
            </p>
            <p style="text-cnet">
                <strong>{{question.text}}</strong>
            </p>
            <p>
                <br>
                {{#each question.Answers}}
                <button data-id="{{this.id}}" class="btn btn-light buttonGuess">
                    {{this.text}}
                </button>
                {{/each}}
            </p>
        </div>
        <div class="row">
            <div class="bottomRow">
            <div class="d-flex justify-content-around mb-3">
                <button class="btn btn-outline-light buttonHome"><a href="/">← Back To Home</a></button>
                <button class="btn btn-outline-light buttonSkip">Skip</button>
            </div>
            </div>
        </div>
    </div>
</div>