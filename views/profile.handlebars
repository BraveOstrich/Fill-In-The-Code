<div class="container">
    <div class="jumbotron mt-4">
        <h2 id="user-name" class="display-4 text-center"></h2>
        <h2 id="user-email" class="display-4 text-center"></h2>
        <h2 id="user-join" class="display-4 text-center"></h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Subject</th>
                    <th>Score</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                    {{#each user.Histories}}
                        <tr>
                            <td>{{this.topic}}</td>
                            <td>{{this.score}}</td>
                            <td>{{this.createdAt}}</td>
                        </tr>
                    {{/each}}
            </tbody>
        </table>
        <a href="/">‚Üê Back To Home</a>
    </div>
</div>